!!! 5
%html{ :lang => 'en', :'ng-app' => 'Presenter' }
  %head
    %meta{ :charset => 'utf-8' }
    %meta{ :content => 'IE=edge,chrome=1', 'http-equiv' => 'X-UA-Compatible' }
    %title= current_page.data.title || 'Presenter'

    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Oswald:700'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Vollkorn:400italic,400,700'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Droid+Sans+Mono'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Lato:300'
    = stylesheet_link_tag 'application'

  %body{ class: page_classes }

    %progress

    %script{type: "text/ng-template", id: 'index'}
      = yield

    %div(ui-view)

    = javascript_include_tag 'http://code.jquery.com/jquery-1.11.0.min.js'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/angularjs/1.2.13/angular.min.js'
    = javascript_include_tag 'http://angular-ui.github.io/ui-router/release/angular-ui-router.min.js'
    = javascript_include_tag 'application'
