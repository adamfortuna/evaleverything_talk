%slides

  %slide
    .slide-content
      .middle
        .bucket.bucket--flag
          .bucket-media
            = image_tag 'http://drewb.io/me.svg', alt: 'Drew Barontini', width: '200', height: '290'
          .bucket-content
            %h1.mbf Presenter
            %p.mbf
              %em by
              Drew Barontini

  %slide
    .slide-content
      .middle.tac
        %h1 Slide Title

  %slide.slide--light
    .slide-content
      .middle.tac
        %h1 Light

  %slide.slide--dark
    .slide-content
      .middle.tac
        %h1 Dark

  %slide.slide--subdue
    .slide-content
      .middle.tac
        %h1 Subdued

  %slide.slide--success
    .slide-content
      .middle.tac
        %h1 Success

  %slide.slide--warning
    .slide-content
      .middle.tac
        %h1 Warning

  %slide.slide--light
    .slide-content
      %h1.mbs List of Things
      .grid
        .grid-box.grid-box--1of2
          %ul
            %li One thing
            %li Here's another thing
            %li And another
        .grid-box.grid-box--1of2
          %ul
            %li Oh man! Another thing
            %li Here's another thing
            %li And, finally, another

  %slide
    .slide-content
      .middle.middle--lrg.tac
        %h1.mbf Another Title
        %p This is a subtitle.

  %slide
    .slide-content
      .middle.tac
        %h2 Image
        = image_tag 'http://placehold.it/800x400', alt: 'Code School', class: 'slide-img'

  %slide.slide--light
    .slide-content
      .middle.middle--med
        - code('sass') do
          :plain
            // *************************************
            //
            //   Card
            //   -> Individual style containers
            //
            // *************************************

            .card
              @extend .bci
              @extend .por
              @extend .ram
              padding: $b-whitespace

  %slide
    .slide-content
      .middle.middle--lrg
        %p.tsxl
          "What would happen if I put some longer, more thought-provoking
          text here that fills up more space?"
        %p.mbf &mdash; Drew Barontini

  %slide(img='http://gificiency.com/m/angry-batman.gif')
    .slide-content
      .bottom
        %h1.tsh WHURZRACHEL!?
        %p WHURRIZSHE?

  %slide(img='http://gificiency.com/m/dance-abed.gif')
    .slide-content
      .middle.tac
        %h1 GIF
        %p This is some more description text.

  %slide.slide--tile(img='http://gificiency.com/m/dance-abed.gif')

  %slide(img='http://gificiency.com/m/happy-hulk.gif')
    .slide-content
      %h1 GIF
      %p This is some more description text.

  %slide(img='http://gificiency.com/m/excited-parks.gif')
