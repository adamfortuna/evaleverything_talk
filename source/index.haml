%slides

  %slide.slide--title
    .slide-content
      .middle.tac
        %h1 Slide Title

  %slide
    .slide-content
      .middle.middle--lrg.tac
        %h1.mbf Another Title
        %p This is a subtitle.

  %slide.slide--light
    .slide-content
      .middle.tac
        %h1 Light

  %slide.slide--dark
    .slide-content
      .middle.tac
        %h1 Dark

  %slide.slide--subdue
    .slide-content
      .middle.tac
        %h1 Subdued

  %slide.slide--success
    .slide-content
      .middle.tac
        %h1 Success

  %slide.slide--error
    .slide-content
      .middle.tac
        %h1 Error

  %slide.slide--warning
    .slide-content
      .middle.tac
        %h1 Warning

  %slide
    .slide-content
      %h1.mbxs List of Things
      %ul
        %li One thing
        %li Here's another thing
        %li And another

  %slide.noTransition
    .slide-content
      %h1.mbxs List of Things
      .grid
        .grid-box.grid-box--1of2
          %ul
            %li One thing
            %li Here's another thing
            %li And another
        .grid-box.grid-box--1of2
          %ul
            %li Oh man! Another thing
            %li Here's another thing
            %li And, finally, another

  %slide
    .slide-content
      .middle.middle--lrg.tac
        = image_tag 'http://placehold.it/800x400', alt: 'Placeholder', class: 'slide-media'

  %slide.slide--video
    .middle.tac
      .slide-video
        %yt-video(width="1280" height="720" video-src="xZY43QSx3Fk")

  %slide
    .slide-content
      .middle.middle--auto
        - code('sass') do
          :plain
            // *************************************
            //
            //   Card
            //   -> Individual style containers
            //
            // *************************************

            .card
              @extend .bci
              @extend .por
              @extend .ram
              padding: $b-whitespace

  %slide
    .slide-content
      .bottom
        %blockquote
          "What would happen if I put some longer, more thought-provoking
          text here that fills up more space?"
        %p &mdash; Drew Barontini

  %slide.slide--fade.slide--fade--dark(img='http://farm6.staticflickr.com/5504/9661002213_5b4eb66f86_o.jpg')
    .slide-content
      .middle.tac
        %h1 Slide Title

  %slide.slide--fade.slide--fade--light(img='http://farm6.staticflickr.com/5504/9661002213_5b4eb66f86_o.jpg')
